#include <stdio.h>

int main() {
    int num1, num2;

    // Input two numbers
    printf("Enter first number: ");
    scanf("%d", &num1);
    printf("Enter second number: ");
    scanf("%d", &num2);
    if (num1 > num2) {
        printf("\n%d is the greatest number.\n", num1);
        printf("%d is the smallest number.\n", num2);
    } 
    else if (num2 > num1) {
        printf("\n%d is the greatest number.\n", num2);
        printf("%d is the smallest number.\n", num1);
    } 
    else {
        printf("\nBoth numbers are equal.\n");
    }

    return 0;
}
